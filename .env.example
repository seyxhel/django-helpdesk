# Example environment variables for deploying django-helpdesk
# Do NOT commit real secrets. Set these in Railway / environment settings.

# Secret
DJANGO_HELPDESK_SECRET_KEY=replace-with-a-secure-random-string

# Database (Railway provides DATABASE_URL)
# e.g. postgres://user:password@host:5432/dbname
DATABASE_URL=

# Optional backwards-compatible POSTGRES_* variables
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Hosts and static
DJANGO_HELPDESK_ALLOWED_HOSTS=*
DJANGO_HELPDESK_STATIC_URL=/static/

# Email (configure SMTP if you want real emails)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=admin@example.com
SERVER_EMAIL=server@example.com

# Optional helpdesk feature flags
HELPDESK_PUBLIC_ENABLED=True
HELPDESK_SUBMIT_A_TICKET_PUBLIC=True
HELPDESK_VIEW_A_TICKET_PUBLIC=True
